<h1>Editing Book</h1>
<%= notice %>

<%= form_for @book, local: true do |f| %>
  <% if @book.errors.any? %>
  <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <span>
    <%= f.submit 'Update Book' %>
  </span>

  <%= link_to 'Show', book_path(@book.id) %>
  <%= link_to 'Back', "/books" %>

<% end %>
