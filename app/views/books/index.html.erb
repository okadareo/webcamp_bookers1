<h1>Books</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tbody>
    <% @books.each do |book| %>
 　  <tr>
 　   <td> <%= book.title %> </td>
  　  <td> <%= book.body %> </td>
        <td> <%= link_to 'Show' , book_path(book.id) %> </td>
        <td> <%= link_to 'Edit' , edit_book_path(book.id) %> </td>
        <td> <%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %> </td>
     </tr>
    <% end %>
  </body>
</table>


<h2>New book</h2>

<%= form_for @book, local: true do |f| %>
  <% if @book.errors.any? %>
  <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
<% end %>  
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <div>
    <label>Title</label>
  </div>
  <%= f.text_field :title %>
  
  
  <div>
    <label>Body</label>
  </div>
  <%= f.text_area :body %>

  <div>
    <%= f.submit 'Create Book' %>
  </div>


<% end %>


